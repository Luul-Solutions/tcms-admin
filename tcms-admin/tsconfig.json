{
  "compilerOptions": {
    "jsx": "react-jsx", // Enable React 17+ JSX transform
    "module": "esnext", // Use modern module system
    "target": "esnext", // Compile to the latest JavaScript version
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "moduleResolution": "node", // Use Node module resolution strategy
    "skipLibCheck": true, // Skips type checking for declaration files for faster builds
    "strict": true, // Enable strict mode for better type safety
    "resolveJsonModule": true, // Allow importing JSON files
    "allowJs": true, // Allow JavaScript files if needed
    "noEmit": true, // Don't emit output files during type-checking
    "isolatedModules": true, // Enable isolated modules for better support with Vite
    "incremental": true, // Speed up builds with incremental compilation
    "lib": ["esnext", "dom"] // Include DOM types for React
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
